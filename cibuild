#!/usr/bin/env bash

set -exuo pipefail

source ~/.asdf/asdf.sh

cd ..

python -m oled-i2c.main build
python -m oled-i2c.main build -s 400000
python -m oled-i2c.main build -s 1000000

python -m oled-i2c.main sim start
python -m oled-i2c.main sim start -s 400000
python -m oled-i2c.main sim start -s 1000000

# python -m oled-i2c.main formal
